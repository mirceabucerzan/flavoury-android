<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/onboarding_profile_image"
        android:layout_width="@dimen/onboarding_profile_image_size"
        android:layout_height="@dimen/onboarding_profile_image_size"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/global_margin_large"
        android:contentDescription="@string/onboarding_profile_image_content_desc"
        tools:src="@drawable/icon_person_generic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/global_margin_large"
        android:gravity="center"
        android:text="@string/onboarding_welcome_back_text"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="?attr/colorPrimary" />

</LinearLayout>