<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppLogoText" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="fontFamily">@font/architects_daughter_regular</item>
        <item name="android:fontFamily">@font/architects_daughter_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="AppButtonSecondary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="rippleColor">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GoogleSignInButton" parent="AppButtonSecondary">
        <item name="backgroundTint">@android:color/white</item>
        <item name="icon">@drawable/google_logo</item>
        <item name="iconTint">@null</item>
        <item name="android:paddingStart">@dimen/sign_in_button_padding</item>
        <item name="android:paddingEnd">@dimen/sign_in_button_padding</item>
        <item name="iconPadding">@dimen/sign_in_button_icon_padding</item>
    </style>

</resources>