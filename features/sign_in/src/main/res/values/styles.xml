<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SignInActivityTheme" parent="AppTheme">
        <item name="android:colorBackground">?attr/colorPrimary</item>
    </style>

    <!-- Adheres to Google's sign in branding guidelines -->
    <!-- https://developers.google.com/identity/branding-guidelines -->
    <style name="GoogleSignInButton" parent="AppButtonSecondary">
        <item name="backgroundTint">@android:color/white</item>
        <item name="icon">@drawable/google_logo</item>
        <item name="iconTint">@null</item>
        <item name="android:paddingStart">@dimen/sign_in_button_padding</item>
        <item name="android:paddingEnd">@dimen/sign_in_button_padding</item>
        <item name="iconPadding">@dimen/sign_in_button_icon_padding</item>
    </style>

</resources>